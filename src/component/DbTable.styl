.q-table
  th, td
    padding 5px 10px
  tbody td
    height 41px
  th.q-table-col-auto-width, td.q-table-col-auto-width
    padding 5px 24px

.q-table__top
  min-height 74px
  border-bottom 1px solid rgba(0,0,0,0.12)

.q-table__bottom, .q-table__top
  background #f5f5f5

.table-selected .q-table__top
  background rgba($primary, .2)

.q-table--grid .q-table__top
  position sticky
  top 50px
  display flex
  z-index 999
  box-shadow 0 1px 5px rgba(0,0,0,0.2), 0 2px 2px rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12)

.q-table__no-selection
  td:first-child, th:first-child
    padding-left 32px

